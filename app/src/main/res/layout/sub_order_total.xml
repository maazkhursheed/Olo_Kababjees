<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingStart="20dp"
                android:paddingRight="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="10dp" >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tv_sbTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sub Total"
                android:textSize="18sp"/>

        <TextView
                android:id="@+id/tvRs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs."
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="75dp"
                android:layout_marginEnd="75dp"/>

        <!--<TextView-->
                <!--android:id="@+id/tv_subTotal"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="1069067"-->
                <!--android:textSize="18sp"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_alignParentEnd="true"-->
                <!--android:layout_marginRight="10dp"-->
                <!--android:layout_marginEnd="10dp"-->
               <!--/>-->

        <TextView
                android:id="@+id/tvService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service Charges (0%)"
                android:textSize="18sp"
                android:layout_below="@+id/tv_sbTotal"/>

        <TextView
                android:id="@+id/tvFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free"
                android:textSize="18sp"
                android:layout_below="@+id/tvRs"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="65dp"
                android:layout_marginEnd="65dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Charges"
                android:textSize="18sp"
                android:layout_below="@+id/tvService"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free"
                android:textSize="18sp"
                android:layout_below="@+id/tvFee"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="65dp"
                android:layout_marginEnd="65dp"/>

        <TextView
                android:id="@+id/tv_subTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1069067"
                android:textSize="18sp"
                android:layout_above="@+id/tvFee"
                android:layout_alignLeft="@+id/tvRs"
                android:layout_alignStart="@+id/tvRs"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"/>

    </RelativeLayout>


</RelativeLayout>